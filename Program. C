#include <stdio.h>

int main() {
    int num1, num2;
    char operation;

    printf("Enter the first number: ");
    scanf("%d", &num1);

    printf("Enter the second number: ");
    scanf("%d", &num2);

    printf("Enter the operation (+, -, *, /): ");
    scanf(" %c", &operation);

    switch(operation) {
        case '+':
            printf("The result is: %d\n", num1 + num2);
            break;
        case '-':
            printf("The result is: %d\n", num1 - num2);
            break;
        case '*':
            printf("The result is: %d\n", num1 * num2);
            break;
        case '/':
            if(num2 != 0) {
                printf("The result is: %d\n", num1 / num2);
            } else {
                printf("Error! Division by zero is not allowed.\n");
            }
            break;
        default:
            printf("Invalid operation. Please enter either +, -, * or /\n");
    }

    return 0;
}#include <stdio.h>

